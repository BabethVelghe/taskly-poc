{
  "name": "taskly-mtx",
  "version": "1.0.0",
  "description": "MTX Sidecar for TaskMaster multitenant application",
  "dependencies": {
    "@sap/cds": "^9",
    "@sap/cds-mtxs": "^3",
    "@sap/xssec": "^4",
    "express": "^4", 
      "@cap-js/sqlite": "^2.0.3"
  },
  "devDependencies": {
    "@sap/cds-dk": "^9"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "cds-serve"
  },
  "cds": {
    "profile": "mtx-sidecar",
    "requires": {
      "[production]": {
        "auth": "ias",
          "db": {
          "kind": "sqlite",
          "credentials": {
            "url": ":memory:"
          },
          "impl": "@cap-js/sqlite"
        }      
      },
      "destinations": true,
      "multitenancy": true,
      "html5-repo": true
    }
  }
}
